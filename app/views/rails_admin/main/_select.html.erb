<%
  model_name = field.abstract_model.to_param.singularize
  collection = field.properties[:collection]
  tag_name = "#{model_name}[#{field.name}]"
%>

<div class="field <%= field.to_param %>">
  <%= label_tag field.to_param, field.label %>
  <%= select_tag field.to_param, options_for_select(collection, field.value), :name => tag_name, :include_blank => true %>
  <% if field.has_errors? %>
    <span class="errorMessage"><%= "#{field.label } #{field.errors.first}" %></span>
  <% end %>
  <p class="help"><%= field.help %></p>
</div>

